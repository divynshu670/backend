generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//
// USER
//
model User {
  id             String  @id @default(uuid())
  name           String
  email          String  @unique
  hashedPassword String?
  googleId       String?
  address        String?
  role           String  @default("user")

  carts    CartItem[]
  orders   Order[]
  payments Payment[]  @relation("UserPayments")
}

//
// PIZZA
//
model Pizza {
  id          String   @id @default(cuid())
  name        String
  description String
  imageUrl    String
  priceCents  Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  cartItems  CartItem[]
  orderItems OrderItem[]
}

//
// CART ITEM
//
model CartItem {
  id String @id @default(cuid())

  user   User   @relation(fields: [userId], references: [id])
  userId String

  pizza   Pizza  @relation(fields: [pizzaId], references: [id])
  pizzaId String

  quantity Int @default(1)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, pizzaId], name: "userId_pizzaId")
}

//
// ORDER
//
model Order {
  id String @id @default(uuid())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  totalCents          Int
  currency            String
  status              String  @default("created")
  stripePaymentIntent String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  items    OrderItem[]
  payments Payment[]   @relation("OrderPayments")
}

//
// ORDER ITEM
//
model OrderItem {
  id String @id @default(cuid())

  order   Order  @relation(fields: [orderId], references: [id])
  orderId String

  pizza   Pizza  @relation(fields: [pizzaId], references: [id])
  pizzaId String

  quantity  Int
  unitPrice Int
}

//
// PAYMENT
//
model Payment {
  id String @id @default(cuid())

  // relation to Order
  order   Order  @relation("OrderPayments", fields: [orderId], references: [id])
  orderId String

  // relation to User (optional or required depending on business logic)
  user   User?   @relation("UserPayments", fields: [userId], references: [id])
  userId String?

  stripeId    String @unique
  amountCents Int
  currency    String
  status      String

  createdAt DateTime @default(now())
}
